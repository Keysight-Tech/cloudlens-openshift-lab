# ============================================================================
# CloudLens OpenShift Visibility Lab - Configuration Template
# ============================================================================
# Copy this file to terraform.tfvars and fill in your values.
# terraform.tfvars is git-ignored and never committed.
# ============================================================================

# ----------------------------------------------------------------------------
# Required - AWS Configuration
# ----------------------------------------------------------------------------
aws_profile   = "cloudlens-lab"
aws_region    = "us-west-2"
key_pair_name = "cloudlens-lab"

# ----------------------------------------------------------------------------
# Required - Red Hat OCM Token
# Get yours at: https://console.redhat.com/openshift/token
# ----------------------------------------------------------------------------
rhcs_token = "eyJ..."   # Paste your full OCM token here

# ----------------------------------------------------------------------------
# Personalize
# ----------------------------------------------------------------------------
deployment_prefix = "cloudlens-lab"

# ----------------------------------------------------------------------------
# Features
# ----------------------------------------------------------------------------
vpb_enabled     = true
rosa_enabled    = true
use_elastic_ips = true

# ----------------------------------------------------------------------------
# CyPerf (optional - requires AWS Marketplace subscription)
# ----------------------------------------------------------------------------
cyperf_enabled = true

# ----------------------------------------------------------------------------
# OpenShift Version (optional - defaults to latest stable)
# ----------------------------------------------------------------------------
# openshift_version = "4.15"
